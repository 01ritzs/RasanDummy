<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!--    <ProgressBar-->
    <!--        android:id="@+id/pbImage"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintBottom_toBottomOf="@+id/ivItem"-->
    <!--        app:layout_constraintLeft_toLeftOf="parent"-->
    <!--        app:layout_constraintRight_toRightOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <ImageView
        android:id="@+id/ivItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ivItemHeight"
        android:src="@drawable/ic_sad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing"
        android:hint="Itmes Name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_x_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvItemQuantity"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing"
        android:hint="100/kg"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_x_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivItem"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvItemRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing"
        android:hint="10 Rs"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_x_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivItem"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>