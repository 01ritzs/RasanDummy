<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/imageSize"
        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toTopOf="@+id/rlSearchBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/imageSize"
        android:src="@drawable/ic_shopping_cart"
        app:layout_constraintBottom_toTopOf="@id/rlSearchBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlSearchBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/imageSize"
        app:layout_constraintBottom_toTopOf="@id/rvProducts"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCart">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search "
            android:padding="@dimen/imageSize"
            android:background="@drawable/rounded_edittext"
            />

        <ImageView
            android:id="@+id/ivSearchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/imageSize"
            android:src="@drawable/ic_search"
            android:layout_alignEnd="@id/etSearch"
            android:layout_alignRight="@id/etSearch" />

    </RelativeLayout>
    <!--    <TextView-->
    <!--        android:id="@+id/tvErrorMessage"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:drawableTop="@drawable/ic_sad"-->
    <!--        android:drawablePadding="16dp"-->
    <!--        android:text="@string/network"-->
    <!--        android:textSize="@dimen/text_size_x_large"-->
